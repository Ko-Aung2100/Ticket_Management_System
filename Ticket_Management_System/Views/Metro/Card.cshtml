
@{
    ViewBag.Title = "Card";

    string from = TempData["From"] as string;
    string to = TempData["To"] as string;
    var ticketCost = TempData["TicketCost"];
    var toID = TempData["ToID"];

    // Rehydrate TempData
    TempData["From"] = from;
    TempData["To"] = to;
    TempData["TicketCost"] = ticketCost;
    TempData["ToID"] = toID;

}

<style>

    .payment-card {
        max-width: 400px;
        margin: 50px auto;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        background-color: white;
    }

        .payment-card img {
            width: 60px;
        }

    .form-control::placeholder {
        color: #ccc;
    }
</style>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <a href="@Url.Action("Index", "Home")">
            <i class="fas fa-home fa-2x"></i>
        </a>
        <div>English <i class="fas fa-regular fa-globe fa-2x"></i></div>
    </div>
    <div class="payment-card text-center">
        <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" alt="Avatar">
        <h5 class="mt-3 mb-4">Payment info</h5>

        <form method="post" action='@Url.Action("Register", "Metro")'>
            <input type="hidden" name="From" value="@from" />
            <input type="hidden" name="To" value="@to" />
            <input type="hidden" name="TicketCost" value="@ticketCost" />
            <input type="hidden" name="ToID" value="@toID" />
            <div class="mb-3 text-start">
                <label class="form-label">Full Name</label>
                <input type="text" class="form-control" placeholder="Alex Smith">
            </div>

            <div class="mb-3 text-start">
                <label class="form-label">Credit Card Number</label>
                <input type="text" class="form-control" placeholder="1234 1234 1234 1234">
            </div>

            <div class="row mb-3">
                <div class="col text-start">
                    <label class="form-label">Exp Date</label>
                    <input type="text" class="form-control" placeholder="MM/YY">
                </div>
                <div class="col text-start">
                    <label class="form-label">CVV</label>
                    <input type="text" class="form-control" placeholder="•••">
                </div>
            </div>

            <div class="mb-4 text-start">
                <label class="form-label">Zip Code</label>
                <input type="text" class="form-control" placeholder="90210">
            </div>

            <a class="btn btn-primary w-100" href="@Url.Action("Register", "Metro", new { from = TempData["From"], to = TempData["ToID"], ticketCost = TempData["TicketCost"] })">
                Confirm Payment
            </a>
            <small class="text-muted d-block mt-2">You verify that this info is correct</small>
        </form>
    </div>
</div>

